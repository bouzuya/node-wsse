    "@typescript-eslint/parser": "^2.28.0",
    "beater": "^9.0.1",
    "beater-helpers": "^2.0.0",
    "chokidar-cli": "^3.0.0",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "prettier": "^2.0.4",
    "rimraf": "^4.0.0",
    "tap-dot-b": "^1.0.1",
    "tslib": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "exports": "./lib/src/index.js",
  "files": [
